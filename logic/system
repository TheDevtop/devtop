# System Logic Module

# Installing package
pacman -S --noconfirm networmanager ufw xorg-xinit \
pulseaudio pulseaudio-alsa pavucontrol \
lightdm lightdm-gtk-greeter light-locker

pacman -S --noconfirm i3-gaps adapta-gtk-theme papirus-icon-theme terminus-font \
alacritty lxrandr-gtk3 rofi xclip \
xfce4-battery-plugin xfce4-panel xfce4-pulseaudio-plugin

# Enable services
systemctl enable NetworkManager
systemctl enable lightdm

